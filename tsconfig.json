{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "outDir": "build/main",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true ,
    "noImplicitReturns": true,
    "lib": [
      "es2017",
    ],
    "types": [
      "node"
    ],
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules/**",
  ],
  "compileOnSave": false
}